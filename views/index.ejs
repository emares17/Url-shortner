<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Url shortner</title>
  </head>
  <body>
    <h1>URL shortner</h1>

    

    <form action="/" method="post">
      <input type="url" name="url" id="url" placeholder="Enter a url here..." />
      <input type="submit" value="url" />
    </form>

    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrl.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.url %>"><%= shortUrl.url %></a></td>
            <td><a href="<%= shortUrl.url_shortid %>"><%= shortUrl.url_shortid %></a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>